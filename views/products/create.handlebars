<h3>Neues QPoint Produkt</h3>

<div class="formContainer">
    <form class="form-horizontal productsForm" role="form" action="/produkte/anlegen" method="POST">
        <input type="hidden" name="productNr" value="{{productNr}}">
        
        <div class="form-group">
            <label for="productNr" class="col-sm-2 control-label">Produkt Nr</label>
            <div class="col-sm-4">
                <input type="text" value="{{productNr}}" class="form-control" required id="productNr" name="productNr" disabled>
            </div>
        </div>
        <div class="form-group">
            <label for="productName" class="col-sm-2 control-label">Produkt Name</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="productName" name="productName">
            </div>
        </div>
        <div class="form-group">
            <label for="price" class="col-sm-2 control-label">Preis</label>
            <div class="col-sm-4">
                <input type="number" step="0.01" pattern="^\d+(\.|\,)\d{2}$" class="form-control" required id="price" name="price">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Anlegen</button>
            </div>
        </div>
    </form>
    <script type="text/javascript">document.getElementById('productName').focus();</script>
</div>