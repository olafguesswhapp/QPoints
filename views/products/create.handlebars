<h1>Neues QPoint Produkt</h1>

<div class="formContainer">
    <form class="form-horizontal productsForm" role="form" action="/produkte/create" method="POST">
        <div class="form-group">
            <label for="productName" class="col-sm-2 control-label">Produkt Name</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="productName" name="productName">
            </div>
        </div>
        <div class="form-group">
            <label for="nr" class="col-sm-2 control-label">Produkt Nr</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="nr" name="nr">
            </div>
        </div>
        <div class="form-group">
            <label for="price" class="col-sm-2 control-label">Preis</label>
            <div class="col-sm-4">
                <input type="number" class="form-control" required id="price" name="price">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
    <script type="text/javascript">document.getElementById('productName').focus();</script>
</div>