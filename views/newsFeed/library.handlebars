<div class="">
	<div class="row">

		{{> programNav  }}

		<div role="main"  class="col-sm-9 col-md-10 main">
			<a href="/warenkorb/add?nr=PR1002" class="btn btn-default">Paket von Botschaften in den Warenkorb legen</a></br></br>
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<td>Nr</td>
						<td>Program / Nachricht</td>
						<td>Status</td>
						<td>Gültig bis</td>
						<td>Ausgeliefert</td>
						<td>Gekauft</td>
					</tr>
				</thead>
				<tbody>
					{{#programs}}
					<tr class='clickableRow' onclick="window.document.location='/programm/{{nr}}';"> 
						<td>{{nr}}</td>
						<td>{{programName}}</td>
						<td>{{programStatus}}</td>
						<td></td>
						<td></td>
						<td></td>
					</tr>
					{{#if programNews}}
					{{#programNews}}
					<tr class='warning' onclick="window.document.location='/news/{{newsFeedId}}';"> 
						<td>Nachricht</td>
						<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="/news/{{newsFeedId}}" title="{{newsMessage}}">{{newsTitle}}</a></td>
						<td>{{newsStatus}}</td>
						<td>{{newsDeadline}}</td>
						<td>{{newsDeliveryCount}} von {{newsDeliveryLimit}}</td>
						<td>{{newsBudget}}</td>
					</tr>
					{{/programNews}}
					{{else}}
					<tr class='warning'> 
						<td>Für dieses Programn wurde noch keine Botschaft erstellt</td>
						<td></td><td></td><td></td><td></td><td></td>
					</tr>
					{{/if}}
					{{/programs}}
				</tbody>
			</table>
		</div>

	</div>
</div>


