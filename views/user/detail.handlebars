<div class="">
    <div class="row">

        {{> accountNav  }}

        <div role="main"  class="col-sm-9 col-md-10 main">
            <h4>{{firstName}}'s Profil &nbsp;&nbsp;<a href="/user/edit/{{username}}" title="User-Daten aktualisieren">
              <img src="/images/update-icon2.png"></a></h4><br>

            <div class="formContainer">
                <form class="form-horizontal productsForm" role="form" action="" method="">

                    {{!-- <input type="hidden" name="customer" value='{{actualCustomerId}}'> --}}
                    <div class="form-group">
                        <label for="fieldUserName" class="col-sm-2 control-label">Username (email)</label>
                        <div class="col-sm-4">
                            <input type="email" class="form-control" value="{{username}}" id="fieldUserName" name="username" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="fieldFirstName" class="col-sm-2 control-label">Vorname</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" value="{{firstName}}" id="fieldFirstName" name="firstName" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="fieldLastName" class="col-sm-2 control-label">Nachname</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" value="{{lastName}}" id="fieldLastName" name="lastName" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="fieldGender" class="col-sm-2 control-label"></label>
                        <div class="col-sm-4">
                            <select class="form-control" name="gender" id="fieldGender" disabled>
                                <option value="0" {{#contentCheck gender '0'}}selected="selected"{{/contentCheck}}>Nicht angeben</option>
                                <option value="1" {{#contentCheck gender '1'}}selected="selected"{{/contentCheck}}>Weiblich</option>
                                <option value="2" {{#contentCheck gender '2'}}selected="selected"{{/contentCheck}}>MÃ¤nnlich</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="fieldRole" class="col-sm-2 control-label">Rolle</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" value="{{role}}" id="fieldRole" name="role" disabled>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>