<h1>Login</h1>

<div class="formContainer">
    <form class="form-horizontal newsletterForm" role="form" action="/login" method="POST">
    	<div class="form-group">
            <label for="fieldUserMail" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-4">
                <input type="email" class="form-control" required id="fieldUserMail" name="username">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldPassword" class="col-sm-2 control-label">Passwort</label>
            <div class="col-sm-4">
                <input type="password" class="form-control" required id="fieldPassword" name="password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Einloggen</button>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4"></br>
                <p>oder</p></br>
                <a href="/anmelden" class="btn btn-default">Neu Anmelden</a>
            </div>
        </div>
    </form>
    <script type="text/javascript">document.getElementById('fieldUserMail').focus();</script>
</div>