<script type="text/javascript">
	function displayItems(){
		var Items = document.getElementsByClassName('orderItems');
		for (i=0;i<Items.length;i++)
			{Items[i].style.display = "table-row";}
	};
	function dissapearItems(){
		var Items = document.getElementsByClassName('orderItems');
		for (i=0;i<Items.length;i++)
			{Items[i].style.display = "none";}
	};	
</script>
<h3>Ihre Bestellungen:</h3>

<table id="orders" class="table table-striped table-hover">
	<thead>
		<tr>
			<td>Nr</td>
			<td>Status</td>
			<td>von</td>
			<td>am</td>
			<td>Zahlung</td>
			<td>Lieferung</td>
			<td>Summe</td>
		</tr>
	</thead>
	<tbody>
		{{#orders}}
		<tr class='active clickableRow' onclick='return displayItems();'>
			<td>{{nr}}</td>
			<td>{{orderStatus}}</td>
			<td>{{approvedName}}</td>
			<td>{{approved}}</td>
			<td>{{paymentStatus}}</td>
			<td>{{deliveryStatus}}</td>
			<td>{{total}}</td>
		</tr>
		{{#items}}
		<tr class="orderItems warning" style="display: none;" onclick='dissapearItems();'>
			<td class="text-right">{{prodNr}}</td>
			<td class="text-right">{{prodName}}</td>
			<td class="text-right">Anzahl</td>
			<td>{{prodQuantity}}</td>
			<td class="text-right">Einzelpreis</td>
			<td>{{prodPrice}}</td>
			<td>{{prodSum}}</td>
		</tr>
		{{/items}}
		{{/orders}}
	</tbody>	
</table>