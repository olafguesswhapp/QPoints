<h1>QPoints Rolle editieren</h1>

<div class="formContainer">
    <form class="form-horizontal newsletterForm" role="form" action="/rollen/edit" method="POST">
        <div class="form-group">
            <label for="fieldNr" class="col-sm-2 control-label">Rollen Nr</label>
            <div class="col-sm-4">
                <div type="text" class="form-control" id="fieldNr">{{neueNr}}</div>
                <input type="hidden" name="nr" value="{{neueNr}}">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldQuantityCodes" class="col-sm-2 control-label">Anzahl Codes</label>
            <div class="col-sm-4">
                <input type="number" class="form-control" required id="fieldQuantityCodes" 
                name="quantityCodes">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldCodesCode0" class="col-sm-2 control-label">Erster Code</label>
            <div class="col-sm-4">
				<input type="text" class="form-control" required id="fieldCodesCode0" 
                name="codes[0][rCode]">
                <input type="text" class="form-control"  id="fieldCodesCode1" 
                name="codes[1][rCode]">
                <input type="text" class="form-control"  id="fieldCodesCode2" 
                name="codes[2][rCode]">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Speichern</button>
            </div>
        </div>
    </form>
    <script type="text/javascript">document.getElementById('fieldQuantityCodes').focus();</script>
</div>