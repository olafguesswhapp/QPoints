<h1>Login</h1>

<div class="formContainer">
    <form class="form-horizontal newsletterForm" role="form" action="/kunden/login" method="POST">
    	<div class="form-group">
            <label for="fieldUserMail" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-4">
                <input type="email" class="form-control" required id="fieldUserMail" name="username">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldPassword" class="col-sm-2 control-label">Passwort</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="fieldPassword" name="password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Einloggen</button>
            </div>
        </div>
    </form>
</div>