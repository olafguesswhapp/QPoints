<h3>Kundeninformation:</h3>
<h4>Kunde {{nr}} {{company}}</h4>
<h4>{{firstName}} {{lastName}}</h4>
<p>{{email}}</p>

<h4>Addresse:</h4>
<p>{{{address1}}}</p>
<p>{{{address2}}}</p>
<p>{{zip}} {{city}} {{state}}</p>

<p>Tefl: {{phone}}</p>

<h4>Zugeordnete User:</h4>
<table class="table table-striped table-hover">
	<thead>
		<tr>
			<td>Name</td>
			<td>Username</td>
			<td>Rolle</td>
		</tr>
	</thead>
	<tbody>
		{{#user}}
		<tr class='clickableRow'> <!-- onclick="window.document.location='/customer/{{nr}}';"-->
			<td>{{name}}</td>
			<td>{{username}}</td>
			<td>{{role}}</td>
		{{/user}}
	</tbody>	
</table>