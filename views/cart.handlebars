<h1>Ihr Warenkorb</h1>
{{#each cart.errors}}
	<div class="alert alert-danger">{{.}}</div>
{{/each}}
{{#each cart.warnings}}
	<div class="alert alert-warning">{{.}}</div>
{{/each}}

<table class="table table-striped">
	<thead>
		<tr>
			<td>Produkt Nr</td>
			<td>Name</td>
			<td>Anzahl</td>
		</tr>
	</thead>
	<tbody>
		{{#each cart.items}}
			<tr>
				<td>{{nr}}</td>
				<td>{{productName}}</td>
				<td>{{quantity}}</td>
			</tr>
		{{/each}}
	</tbody>
</table>

<a class="btn btn-primary" href="/warenkorb/checkout">Checkout</a>